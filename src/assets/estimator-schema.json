{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EstimatorConfig",
  "type": "object",
  "properties": {
    "flavour": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "parameters": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "values": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "inputFactor": {
                  "type": "string"
                },
                "selected": {
                  "type": "boolean"
                },
                "initialAnalysisDesign": {
                  "type": "string"
                },
                "procurement": {
                  "type": "string"
                },
                "hardware": {
                  "type": "string"
                },
                "infrastructureConfiguration": {
                  "type": "string"
                },
                "integrationSystems": {
                  "type": "string"
                },
                "securitySetup": {
                  "type": "string"
                },
                "monitoringSetup": {
                  "type": "string"
                },
                "documentationAdaptation": {
                  "type": "string"
                },
                "changeManagement": {
                  "type": "string"
                },
                "adminTraining": {
                  "type": "string"
                },
                "userTraining": {
                  "type": "string"
                },
                "adminOverhead": {
                  "type": "string"
                }
              },
              "required": ["inputFactor", "selected", "initialAnalysisDesign"]
            }
          }
        },
        "required": ["label", "values"]
      }
    },
    "costs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "category": {
            "type": "string"
          }
        },
        "required": ["label", "value", "category"]
      }
    },
    "constants": {
      "type": "object",
      "properties": {
        "dailyrate": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string"
            },
            "currency": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": ["label", "currency", "value"]
        },
        "runcosts": {
          "type": "object",
          "properties": {
            "unit": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": ["unit", "value"]
        },
        "tcoduration": {
          "type": "object",
          "properties": {
            "unit": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": ["unit", "value"]
        }
      },
      "required": ["dailyrate", "runcosts", "tcoduration"]
    }
  },
  "required": [
    "flavour",
    "author",
    "version",
    "parameters",
    "costs",
    "constants"
  ]
}
